@model StudentManagementSystemWithDatabase.Models.Student

@{
    ViewData["Title"] = "DeleteStudent";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-center text-danger mb-4">Delete Student</h2>
        <hr />

        <div class="alert alert-warning text-center">
            <h5>Are you sure you want to delete this student?</h5>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-3 border-danger">
                    <h4 class="text-center text-dark">Student Details</h4>
                    <dl class="row mt-3">
                        <dt class="col-sm-4 fw-bold">First Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                        <dt class="col-sm-4 fw-bold">Last Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                        <dt class="col-sm-4 fw-bold">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 fw-bold">Date of Birth</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfBirth)</dd>
                    </dl>
                </div>

                <form asp-action="DeleteStudent" class="text-center mt-4">
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
