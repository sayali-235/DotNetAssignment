@model StudentManagementSystemWithDatabase.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-center text-primary mb-4">Student Details</h2>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-3 border-info">
                    <dl class="row mt-3">
                        <dt class="col-sm-4 fw-bold text-dark">First Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                        <dt class="col-sm-4 fw-bold text-dark">Last Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                        <dt class="col-sm-4 fw-bold text-dark">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 fw-bold text-dark">Date of Birth</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfBirth)</dd>
                    </dl>
                </div>

                <div class="text-center mt-4">
                    <a asp-action="UpdateStudent" asp-route-id="@Model?.Id" class="btn btn-warning px-4">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="GetAllStudents" class="btn btn-secondary px-4 ms-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
