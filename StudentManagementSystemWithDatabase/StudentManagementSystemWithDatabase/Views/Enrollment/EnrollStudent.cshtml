@model StudentManagementSystemWithDatabase.Models.Enrollment

@{
    ViewData["Title"] = "Enroll Student";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-center text-primary mb-4">Enroll Student</h2>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="EnrollStudent">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Student  -->
                    <div class="form-group mb-3">
                        <label class="fw-bold text-dark">Student Name</label>
                        <input type="text" class="form-control border-primary" value="@ViewBag.StudentName" readonly />
                    </div>
                    <input type="hidden" name="studentId" value="@ViewBag.StudentId" />
                    <!-- Course Dropdown -->
                    <div class="form-group mb-3">
                        <label class="fw-bold text-dark">Select Course</label>
                        <select name="courseId" class="form-control border-primary" asp-items="ViewBag.Courses">
                            <option value="">-- Select a Course --</option>
                        </select>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-user-plus"></i> Enroll
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
