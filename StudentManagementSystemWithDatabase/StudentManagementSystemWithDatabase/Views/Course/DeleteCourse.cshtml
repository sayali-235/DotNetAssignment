@model StudentManagementSystemWithDatabase.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-center text-danger mb-4">Delete Course</h2>
        <p class="text-center text-muted">Are you sure you want to delete this course? This action cannot be undone.</p>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-8">
                <dl class="row">
                    <!-- Course Name -->
                    <dt class="col-sm-4 fw-bold text-secondary">
                        @Html.DisplayNameFor(model => model.CourseName)
                    </dt>
                    <dd class="col-sm-8 text-dark">
                        @Html.DisplayFor(model => model.CourseName)
                    </dd>

                    <!-- Course Description -->
                    <dt class="col-sm-4 fw-bold text-secondary">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-8 text-dark">
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <!-- Credits -->
                    <dt class="col-sm-4 fw-bold text-secondary">
                        @Html.DisplayNameFor(model => model.Credits)
                    </dt>
                    <dd class="col-sm-8 text-dark">
                        @Html.DisplayFor(model => model.Credits)
                    </dd>
                </dl>

                <!-- Delete Confirmation Form -->
                <form asp-action="DeleteCourse" class="text-center mt-4">
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                    <a asp-action="GetAllCourses" class="btn btn-secondary px-4 ms-2">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
