@model StudentManagementSystemWithDatabase.Models.Course

@{
    ViewData["Title"] = "Update Course";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-center text-primary mb-4">Update Course</h2>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="UpdateCourse">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <!-- Course Name -->
                    <div class="mb-3">
                        <label asp-for="CourseName" class="form-label fw-bold"></label>
                        <input asp-for="CourseName" class="form-control border-primary shadow-sm" />
                        <span asp-validation-for="CourseName" class="text-danger"></span>
                    </div>

                    <!-- Course Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Description" class="form-control border-primary shadow-sm" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Credits -->
                    <div class="mb-3">
                        <label asp-for="Credits" class="form-label fw-bold"></label>
                        <input asp-for="Credits" type="number" class="form-control border-primary shadow-sm" />
                        <span asp-validation-for="Credits" class="text-danger"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="GetAllCourses" class="btn btn-secondary px-4">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
