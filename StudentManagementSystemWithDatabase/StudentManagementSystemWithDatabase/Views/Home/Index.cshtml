            <p>Easily add, edit, and manage student records.</p>
        </div>
        <div class="col-md-4 text-center">
            @* <i class="fas fa-book fa-3x text-info"></i> *@
            <h4 class="mt-3">Course Management</h4>
            <p>Organize courses  </p>
        </div>
        <div class="col-md-4 text-center">
            @* <i class="fas fa-list-check fa-3x text-warning"></i> *@
            <h4 class="mt-3">Enrollment System</h4>
            <p>Track student enrollments </p>
        </div>
    </div>

    <!-- Contact/Support Section -->
    <div class="mt-5 p-4 bg-light rounded shadow-sm">
        <h3 class="text-center text-secondary">Need Assistance?</h3>
        <p class="text-center">
            Contact our support team at <a href="mailto:sayalidivekar235@gmail.com">support@sayalidivekar235@gmail.com</a>
        </p>
    </div>
</div>

