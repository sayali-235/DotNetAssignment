@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center">
        <h1 class="display-4 fw-bold text-primary">Welcome to Online Student Management</h1>
        <p class="lead text-muted">
            A simple and efficient way to manage students, courses, and enrollments.
        </p>
        <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg mt-3">
            Get Started
        </a>
    </div>

    <!-- Features Section -->
    <div class="row mt-5">
        <div class="col-md-4 text-center">
            @* <i class="fas fa-user-graduate fa-3x text-success"></i> *@
